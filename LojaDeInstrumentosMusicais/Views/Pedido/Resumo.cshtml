@{ 
    ViewData["Title"] = "Resumo";
}
@using LojaDeInstrumentosMusicais.Models.ViewModels;
@model CarrinhoViewModel

<h3>Resumo do Pedido</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row row-center">
            <div class="col-md-12">
                <h3>Nº do Pedido</h3>
            </div>
        </div>
        <div class="row row-center">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>João da Silva</div>
                <div>(13) 33040415</div>
            </div>
            <div class="col-md-3">
                <div>joao@joao.com.br</div>
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega:</h3>
                <div>Rua Vergueiro 123, Vila Mariana - São Paulo - SP</div>
            </div>
        </div>
        <div class="row row-center">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3>
            </div>
        </div>
        @foreach (var item in Model.Itens)
        {
            <div class="row row-center">
                <div class="col-md-10">
                    <div>@item.Produto.Nome</div>
                </div>
                <div class="col-md-2">
                    <div>@item.Quantidade</div>
                </div>
            </div>
        }


    </div>
</div>

